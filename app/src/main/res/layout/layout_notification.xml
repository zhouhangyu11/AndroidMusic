<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="132dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/notification_img"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/taylorswift"/>
    <TextView
        android:id="@+id/notification_song"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/notification_img"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:text="Red"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/notification_img"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:text="Taylor Swift"
        android:textColor="@color/white"/>

    <RelativeLayout
        android:id="@+id/layout_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/notification_img"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp">
        <ImageButton
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/notification_previousBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:layout_toRightOf="@+id/notification_previousBtn"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:id="@+id/notification_playBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pausing"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:layout_toRightOf="@+id/notification_playBtn"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:id="@+id/notification_nextBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/right"
            android:background="@android:color/transparent"/>

    </RelativeLayout>

</RelativeLayout>